{
  "compilerOptions": {
    //"target": "ES2020",           // JS version to which TS will be compiled
    //"module": "CommonJS",         // Node.js module system
    "module": "esnext",
    "target": "es2017",
    "rootDir": "./src",             // TS source files are in src/
    "outDir": "dist",             // JS files after compilation will be in dist/
    "strict": true,               // strinct type-checking options
    "esModuleInterop": true,      // makes it easier to import CommonJS modules
    "moduleResolution": "Node",   // resolve imports like Node.js does
    "forceConsistentCasingInFileNames": true, //resolve imports like Node.js does
    "skipLibCheck": true,		  // skip type checking of declaration files
	//"noImplicitAny": true,      // raise error on expressions and declarations with an implied 'any' type
	"baseUrl" : "./src",
	"paths": {},
	"types" : ["node", "ws", "jest"]
  },
  "include": ["src/**/*"],        // which files to include
  "exclude": ["node_modules"]     // which files to exclude
}
